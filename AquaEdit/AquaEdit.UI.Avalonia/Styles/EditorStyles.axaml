<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Editor-specific styles -->
  <Style Selector="TextBox.editor">
    <Setter Property="FontFamily" Value="Consolas,Courier New,Monaco,monospace" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Padding" Value="8,4" />
    <Setter Property="AcceptsReturn" Value="True" />
    <Setter Property="AcceptsTab" Value="True" />
    <Setter Property="TextWrapping" Value="NoWrap" />
  </Style>

  <!-- Line number styling -->
  <Style Selector="TextBlock.line-number">
    <Setter Property="FontFamily" Value="Consolas,Courier New,Monaco,monospace" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    <Setter Property="TextAlignment" Value="Right" />
    <Setter Property="Padding" Value="8,2" />
  </Style>

  <!-- Tab button styling -->
  <Style Selector="Button.tab-button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0,0,1,0" />
    <Setter Property="Padding" Value="12,8" />
  </Style>

  <Style Selector="Button.tab-button:pointerover">
    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
  </Style>

  <Style Selector="Button.tab-button:pressed">
    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListMediumBrush}" />
  </Style>

  <!-- Menu icon sizing -->
  <Style Selector="MenuItem PathIcon">
    <Setter Property="Width" Value="16" />
    <Setter Property="Height" Value="16" />
  </Style>
</Styles>