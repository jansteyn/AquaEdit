<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AquaEdit.UI.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AquaEdit.UI.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="AquaEdit.UI.Avalonia.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600">

  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <DockPanel>
    <!-- Menu Bar -->
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_New" Command="{Binding NewFileCommand}" HotKey="Ctrl+N">
          <MenuItem.Icon>
            <PathIcon Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" HotKey="Ctrl+O">
          <MenuItem.Icon>
            <PathIcon Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,1 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem Header="_Save" Command="{Binding SaveCommand}" HotKey="Ctrl+S">
          <MenuItem.Icon>
            <PathIcon Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" HotKey="Ctrl+Shift+S" />
        <MenuItem Header="Save A_ll" Command="{Binding SaveAllCommand}" />
        <Separator />
        <MenuItem Header="_Close" Command="{Binding CloseFileCommand}" HotKey="Ctrl+W" />
        <Separator />
        <MenuItem Header="Recent Files" ItemsSource="{Binding RecentFiles}">
          <MenuItem.Styles>
            <Style Selector="MenuItem">
              <Setter Property="Header" Value="{Binding}" />
            </Style>
          </MenuItem.Styles>
        </MenuItem>
        <Separator />
        <MenuItem Header="E_xit" Command="{Binding ExitCommand}" HotKey="Alt+F4" />
      </MenuItem>

      <MenuItem Header="_Edit">
        <MenuItem Header="_Undo" Command="{Binding UndoCommand}" HotKey="Ctrl+Z">
          <MenuItem.Icon>
            <PathIcon Data="M12.5,8C9.85,8 7.45,9 5.6,10.6L2,7V16H11L7.38,12.38C8.77,11.22 10.54,10.5 12.5,10.5C16.04,10.5 19.05,12.81 20.1,16L22.47,15.22C21.08,11.03 17.15,8 12.5,8Z" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Redo" Command="{Binding RedoCommand}" HotKey="Ctrl+Y">
          <MenuItem.Icon>
            <PathIcon Data="M18.4,10.6C16.55,9 14.15,8 11.5,8C6.85,8 2.92,11.03 1.54,15.22L3.9,16C4.95,12.81 7.95,10.5 11.5,10.5C13.45,10.5 15.23,11.22 16.62,12.38L13,16H22V7L18.4,10.6Z" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem Header="Cu_t" Command="{Binding CutCommand}" HotKey="Ctrl+X" />
        <MenuItem Header="_Copy" Command="{Binding CopyCommand}" HotKey="Ctrl+C" />
        <MenuItem Header="_Paste" Command="{Binding PasteCommand}" HotKey="Ctrl+V" />
        <Separator />
        <MenuItem Header="_Find..." Command="{Binding ToggleSearchCommand}" HotKey="Ctrl+F">
          <MenuItem.Icon>
            <PathIcon Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Go to Line..." Command="{Binding GoToLineCommand}" HotKey="Ctrl+G" />
        <Separator />
        <MenuItem Header="Se_ttings..." Command="{Binding SettingsCommand}" />
      </MenuItem>

      <MenuItem Header="_View">
        <MenuItem Header="Toggle _Search Panel" Command="{Binding ToggleSearchCommand}" />
        <Separator />
        <MenuItem Header="_Plugin Manager" Command="{Binding PluginManagerCommand}" />
      </MenuItem>

      <MenuItem Header="_Help">
        <MenuItem Header="_About AquaEdit" Command="{Binding AboutCommand}" />
      </MenuItem>
    </Menu>

    <!-- Status Bar -->
    <Border DockPanel.Dock="Bottom" 
            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="0,1,0,0"
            Padding="8,4">
      <!-- Create StatusBarViewModel from EditorViewModel -->
      <ContentControl Content="{Binding ActiveEditor}">
        <ContentControl.ContentTemplate>
          <DataTemplate>
            <views:StatusBarView>
              <views:StatusBarView.DataContext>
                <vm:StatusBarViewModel />
              </views:StatusBarView.DataContext>
            </views:StatusBarView>
          </DataTemplate>
        </ContentControl.ContentTemplate>
      </ContentControl>
    </Border>

    <!-- Main Content Area -->
    <Grid>
      <views:MainView DataContext="{Binding}" />
      
      <!-- Loading Overlay - Only show when ActiveEditor exists AND is loading -->
      <Border Background="#CC000000"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              ZIndex="999"
              IsVisible="{Binding IsLoading}"
              IsHitTestVisible="True">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="16">
          <TextBlock Text="Loading file..." 
                     FontSize="18"
                     Foreground="White"
                     HorizontalAlignment="Center" />
          <ProgressBar Value="{Binding ActiveEditor.LoadingProgress, FallbackValue=0, TargetNullValue=0}"
                       Minimum="0"
                       Maximum="100"
                       Width="300"
                       Height="4" />
          <TextBlock Text="{Binding ActiveEditor.LoadingProgress, StringFormat='{}{0}%', FallbackValue='0%', TargetNullValue='0%'}"
                     Foreground="White"
                     HorizontalAlignment="Center" />
        </StackPanel>
      </Border>
    </Grid>
  </DockPanel>
</Window>
