<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AquaEdit.UI.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="400"
        x:Class="AquaEdit.UI.Avalonia.Views.Dialogs.AboutDialog"
        x:DataType="vm:AboutViewModel"
        Title="About AquaEdit"
        Width="450" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <Design.DataContext>
    <vm:AboutViewModel />
  </Design.DataContext>

  <DockPanel>
    <!-- Close Button -->
    <Border DockPanel.Dock="Bottom"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="0,1,0,0"
            Padding="16">
      <Button Content="Close"
              Command="{Binding CloseCommand}"
              HorizontalAlignment="Right"
              MinWidth="100" />
    </Border>

    <!-- Content -->
    <StackPanel VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Spacing="16"
                Margin="32">
      
      <!-- Logo/Icon -->
      <Viewbox Width="96" Height="96"
               HorizontalAlignment="Center">
        <PathIcon Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,17V16H9V14H13V13H10A1,1 0 0,1 9,12V9A1,1 0 0,1 10,8H14V9H12V11H15V12A1,1 0 0,1 14,13H15A1,1 0 0,1 16,14V16A1,1 0 0,1 15,17H11Z"
                  Foreground="{DynamicResource SystemAccentColor}" />
      </Viewbox>

      <!-- Application Name -->
      <TextBlock Text="{Binding ApplicationName}"
                 FontSize="32"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center" />

      <!-- Version -->
      <TextBlock Text="{Binding Version}"
                 FontSize="14"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 HorizontalAlignment="Center" />

      <!-- Description -->
      <TextBlock Text="{Binding Description}"
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 MaxWidth="350"
                 HorizontalAlignment="Center" />

      <!-- Copyright -->
      <TextBlock Text="{Binding Copyright}"
                 FontSize="12"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 HorizontalAlignment="Center"
                 Margin="0,16,0,0" />

      <!-- License -->
      <TextBlock FontSize="12"
                 HorizontalAlignment="Center">
        <Run Text="Licensed under" />
        <Run Text="{Binding LicenseInfo}" FontWeight="SemiBold" />
      </TextBlock>

      <!-- Links -->
      <StackPanel Orientation="Horizontal" 
                  HorizontalAlignment="Center"
                  Spacing="16"
                  Margin="0,16,0,0">
        <Button Content="View on GitHub"
                Command="{Binding OpenGitHubCommand}">
          <Button.Styles>
            <Style Selector="Button">
              <Setter Property="Background" Value="Transparent" />
              <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            </Style>
          </Button.Styles>
        </Button>

        <Button Content="View License"
                Command="{Binding ViewLicenseCommand}">
          <Button.Styles>
            <Style Selector="Button">
              <Setter Property="Background" Value="Transparent" />
            </Style>
          </Button.Styles>
        </Button>
      </StackPanel>
    </StackPanel>
  </DockPanel>
</Window>